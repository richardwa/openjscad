{
  "name": "tscad",
  "version": "1.0.0",
  "description": "constructive solid geometry using signed distance functions and typescript",
  "keywords": [
    "marching-cubes",
    "dual-marching-cubes",
    "implicitcad",
    "jscad"
  ],
  "main": "dist/index.js",
  "types": "dist/index.t.ds",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "test-viewer": "parcel ./src/viewer/viewer.html",
    "build": "tsc && parcel build ./src/viewer/viewer.html --out-dir ./dist/viewer",
    "viewer": "ts-node ./bin/viewer.ts",
    "test": "ts-node ./index.spec.ts",
    "ts": "ts-node"
  },
  "author": "Richard Wa",
  "license": "GPL-3.0",
  "devDependencies": {
    "parcel-bundler": "^1.12.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@types/kd-tree-javascript": "^1.0.0",
    "@types/node": "^14.14.14",
    "kd-tree-javascript": "^1.0.3",
    "open": "^8.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "bin": {
    "tscad": "./bin/render.ts",
    "tscad-viewer": "./bin/viewer.ts"
  }
}